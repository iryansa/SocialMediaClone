<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background Color -->
    <solid android:color="#353535" /> <!-- Change to desired color -->

    <!-- Border Color & Thickness (Optional) -->
    <stroke
        android:width="2dp"
        android:color="#003700B3" /> <!-- Change color as needed -->

    <!-- Corner Radius for Rounded Borders -->
    <corners android:radius="20dp" />

    <padding
        android:left="10dp"
        android:right="10dp" />
</shape>
